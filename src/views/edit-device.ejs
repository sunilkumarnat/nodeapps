<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-12 col-md-6">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">Register Device</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Register New Device Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-sm-12 col-ms-6 col-lg-3">
                                    <% if (errors !== '' && errors != null) { %>
                                        <% errors.forEach( (item) => { %>
                                            <div class="alert alert-danger">
                                                <%- item %>
                                            </div>
                                            <% }) %>
                                                <% } %>


                                </div>
                            </div>

                            <form action="/edit-device" method="POST">
                                <div class="row g-3 align-items-center mb-3">
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="company" class="col-form-label">Company</label>
                                            <input type="text" name="company" id="company" value="<%= device.company %>" class="form-control" placeholder="Enter Company Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="serial_no" class="col-form-label">Serial No.</label>
                                            <input type="text" name="serial_no" id="serial_no" value="<%= device.serial_no %>" class="form-control" placeholder="Enter Serial No. Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="manufacturing_date" class="col-form-label">Manufacturing Date</label>
                                            <input type="date" name="manufacturing_date" value="<%= moment(device.manufacturing_date).format('YYYY-MM-DD')  %>" id="manufacturing_date" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="voltage" class="col-form-label">Voltage</label>
                                            <input type="text" name="voltage" id="voltage" value="<%= device.voltage %>" class="form-control" placeholder="Enter Voltage Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="power" class="col-form-label">Power</label>
                                            <input type="text" name="power" id="power" value="<%= device.power %>" class="form-control" placeholder="Enter Power Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="rpm" class="col-form-label">RPM</label>
                                            <input type="text" name="rpm" id="rpm" value="<%= device.rpm %>" class="form-control" placeholder="Enter RPM Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="frequency" class="col-form-label">Frequency</label>
                                            <input type="text" name="frequency" value="<%= device.frequency %>" id="frequency" class="form-control" placeholder="Enter Frequency Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="current" class="col-form-label">Current </label>
                                            <input type="text" name="current" value="<%= device.current %>" id="current" class="form-control" placeholder="Enter Current Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-9">
                                        <div class="form-group">
                                            <label for="device_mobile_imei_no" class="col-form-label">Device Mobile No. / IMEI No. </label>
                                            <input type="text" name="device_mobile_imei_no" value="<%= device.device_mobile_imei_no %>" id="device_mobile_imei_no" class="form-control" placeholder="Enter Device Mobile No. / IMEI No. Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12 col-lg-12">
                                        <div class="form-group">
                                            <label for="specification" class="col-form-label">VFD Specification </label>
                                            <textarea name="specification" id="specification" class="form-control" placeholder="Enter VFD Specification  Here ..."><%= device.specification %></textarea>
                                        </div>
                                    </div>

                                </div>
                        </div>
                        <div class="card-footer">
                            <div class="row g-3 align-items-center">
                                <div class="col-sm-12 col-ms-12 col-lg-12 text-right">
                                    <input type="hidden" name="id" id="id" value="<%= device.id %>" />
                                    <input type="submit" id="submit" class="btn btn-outline-secondary " name="Form" value="Register">
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('includes/footer') %>