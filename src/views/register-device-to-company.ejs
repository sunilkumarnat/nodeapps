<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-12 col-md-6">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">Register Device To Company</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Register New Device to Company Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-sm-12 col-ms-6 col-lg-3">
                                    <% if (errors !== '' && errors != null) { %>
                                        <% errors.forEach( (item) => { %>
                                            <div class="alert alert-danger">
                                                <%- item %>
                                            </div>
                                            <% }) %>
                                                <% } %>
                                                    <% if (success !== '' && errors != null) { %>
                                                        <div class="alert alert-success">
                                                            <%= success %>
                                                        </div>
                                                        <% } %>

                                </div>
                            </div>

                            <form action="/register-device" method="POST">
                                <div class="row g-3 align-items-center mb-3">
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="company_id" class="col-form-label">Company</label>
                                            <select name="company_id" id="company_id" class="form-control">
                                                <option value="">Select Company</option>
                                                <% for( let i = 0; i < companies.length; i++ ) { %>
                                                    <option value="<%- companies[i].id %>"><%- companies[i].company_name %></option>
                                                <% } %>                                               
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="moter_id" class="col-form-label">Moter</label>
                                            <select name="moter_id" id="moter_id" class="form-control">
                                                <option value=""> Select Moter</option>
                                                <% for( let i = 0; i < moters.length; i++ ) { %>
                                                    <option value="<%- moters[i].id %>"><%- moters[i].hp %></option>
                                                <% } %>    
                                               
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="moter_serial_no" class="col-form-label">Moter Serial No</label>
                                            <input type="text" name="moter_serial_no" id="moter_serial_no" class="form-control" placeholder="Enter Moter Serial No. Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="device_id" class="col-form-label">Device</label>
                                            <select name="device_id" id="device_id" class="form-control">
                                                <option value=""> Select Device</option>                                               
                                                <% for( let i = 0; i < devices.length; i++ ) { %>
                                                    <option value="<%- devices[i].id %>"><%- devices[i].power %></option>
                                                <% } %>    
                                            </select>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <div class="card-footer">
                            <div class="row g-3 align-items-center">
                                <div class="col-sm-12 col-ms-12 col-lg-12 text-right">
                                    <input type="submit" id="submit" class="btn btn-outline-secondary " name="Form" value="Register">
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('includes/footer') %>