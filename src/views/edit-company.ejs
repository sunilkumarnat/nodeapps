<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-ms-12 col-lg-12">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">Edit Company</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Edit Companies Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-sm-12 col-ms-6 col-lg-3">
                                    <% if (errors !== '' && errors != null) { %>
                                        <% errors.forEach( (item) => { %>
                                            <div class="alert alert-danger">
                                                <%- item %>
                                            </div>
                                            <% }) %>
                                                <% } %>




                                </div>
                            </div>
                            <form action="/edit-company" method="POST">
                                <div class="row g-3 align-items-center mb-3">
                                    <div class="col-sm-12 col-ms-4 col-lg-3">
                                        <div class="form-group">
                                            <label for="company_name" class="col-form-label">Company Name</label>
                                            <input type="text" name="company_name" value="<%= company.company_name %>" id="company_name" class="form-control" placeholder="Enter Company Name Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-8 col-lg-9">
                                        <div class="form-group">
                                            <label for="about_company" class="col-form-label">About Company</label>
                                            <input type="text" name="about_company" value="<%= company.about_company %>" id="about_company" class="form-control" placeholder="Abount Company Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="conatct_person_name" class="col-form-label">Contact Person Name</label>
                                            <input type="text" name="conatct_person_name" value="<%= company.conatct_person_name %>" id="conatct_person_name" class="form-control" placeholder="Enter Contact Person Name Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="email" class="col-form-label">Email</label>
                                            <input type="email" name="email" id="email" value="<%= company.email %>" class="form-control" placeholder="Enter Email Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="contact_no" class="col-form-label">Contact No.</label>
                                            <input type="text" name="contact_no" value="<%= company.contact_no %>" id="contact_no" class="form-control" placeholder="Enter Contact No. Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-12 col-lg-6">
                                        <div class="form-group">
                                            <label for="address" class="col-form-label">Address</label>
                                            <input type="text" name="address" id="address" value="<%= company.address %>" class="form-control" placeholder="Enter Address Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="city" class="col-form-label">City</label>
                                            <input type="text" name="city" id="city" class="form-control" value="<%= company.city %>" placeholder="Enter City Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="state" class="col-form-label">state</label>
                                            <input type="text" name="state" id="state" class="form-control" value="<%= company.state %>" placeholder="Enter state Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-3">
                                        <div class="form-group">
                                            <label for="pincode" class="col-form-label">Pincode</label>
                                            <input type="text" name="pincode" id="pincode" class="form-control" value="<%= company.pincode %>" placeholder="Enter Pincode Here ...">
                                        </div>
                                    </div>

                                </div>
                        </div>
                        <div class="card-footer">
                            <div class="row g-3 align-items-center">
                                <div class="col-sm-12 col-ms-12 col-lg-12 text-right">
                                    <input type="hidden" name="id" id="id" class="form-control" value="<%= company.id %>">
                                    <input type="submit" id="submit" class="btn btn-outline-secondary " name="Form" value="Update">
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>




        <%- include('includes/footer') %>