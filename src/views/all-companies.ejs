<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">All Companies</h5>
                            <h6 class="card-subtitle mb-2 text-muted">View Companies Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="p-1 table-responsive mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Logo</th>
                                            <th scope="col">Company</th>
                                            <th scope="col">Contact Person</th>
                                            <th scope="col">Contact No.</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Registered On</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% companies.forEach((company, i) => { %>

                                            <tr>
                                                <th scope="row">
                                                    <%= i+1  %>
                                                </th>
                                                <td>
                                                    <a href="/company-profile/<%= company.id  %>">                                                        
                                                        <img src="/images/logos/<%= company.logo  %>" width="32px" height="32px" class="circle" />
                                                    </a>
                                                </td>
                                                <td>
                                                    <%= company.company_name  %>
                                                </td>
                                                <td>
                                                    <%= company.conatct_person_name  %>
                                                </td>
                                                <td>
                                                    <%= company.contact_no  %>
                                                </td>
                                                <td>
                                                    <%= company.email  %>
                                                </td>
                                                <td>
                                                    <%= moment(company.added_on).format("MMM Do YYYY")  %>
                                                </td>
                                                <td>
                                                    <a href="/edit-company/<%= company.id  %>" class="action-btn">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a>
                                                    <a href="/delete-company/<%= company.id  %>" class="action-btn">
                                                        <i class="fa fa-trash  text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>

                                            <% }) %>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <%- include('includes/footer') %>