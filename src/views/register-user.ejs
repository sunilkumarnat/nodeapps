<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-12 col-md-6">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">Register User</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Register New User Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-sm-12 col-ms-6 col-lg-3">
                                    <% if (errors !== '' && errors != null) { %>
                                        <% errors.forEach( (item) => { %>
                                            <div class="alert alert-danger">
                                                <%- item %>
                                            </div>
                                            <% }) %>
                                                <% } %>

                                                    <% if (success !== '' && errors != null) { %>
                                                        <div class="alert alert-success">
                                                            <%= success %>
                                                        </div>
                                                        <% } %>
                                </div>
                            </div>

                            <form action="/register-user" method="POST" enctype="multipart/form-data">
                                <div class="row g-3 align-items-center mb-3">
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="profile_pic" class="col-form-label">Profile Pic</label>
                                            <input type="file" name="profile_pic" id="profile_pic" required>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="name" class="col-form-label">Name</label>
                                            <input type="text" name="name" id="name" class="form-control" required placeholder="Enter Name Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="contact_no" class="col-form-label">Contact No</label>
                                            <input type="text" name="contact_no" id="contact_no" required class="form-control" placeholder="Enter Contact No Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="email" class="col-form-label">Email</label>
                                            <input type="email" name="email" id="email" required class="form-control" placeholder="Enter Email Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="password" class="col-form-label">Password</label>
                                            <input type="password" name="password" required id="password" class="form-control" placeholder="********">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-ms-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="cpassword" class="col-form-label">Confirm Password</label>
                                            <input type="password" name="cpassword" required id="cpassword" class="form-control" placeholder="********">
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <div class="card-footer">
                            <div class="row g-3 align-items-center">
                                <div class="col-sm-12 col-ms-12 col-lg-12 text-right">
                                    <input type="submit" id="submit" class="btn btn-outline-secondary " name="Form" value="Register">
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('includes/footer') %>