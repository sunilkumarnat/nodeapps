<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">All Users</h5>
                            <h6 class="card-subtitle mb-2 text-muted">View Users Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="p-1 table-responsive mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Profile Pic</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Contact No.</th>
                                            <th scope="col">Registered On</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((user, i) => { %>

                                            <tr>
                                                <th scope="row">
                                                    <%= i+1  %>
                                                </th>
                                                <td>
                                                    <a href="/user-profile/<%= user.id  %>">
                                                        <img src="/images/profile_pics/<%= user.profile_pic  %>" width="32px" height="32px" class="circle" />
                                                    </a>
                                                </td>
                                                <td>
                                                    <%= user.name  %>
                                                </td>
                                                <td>
                                                    <%= user.email  %>
                                                </td>
                                                <td>
                                                    <%= user.contact_no  %>
                                                </td>
                                                <td>
                                                    <%= moment(user.added_on).format("MMM Do YYYY")  %>
                                                </td>
                                                <td>
                                                    <a href="/edit-user/<%= user.id  %>" class="action-btn">
                                                        <i class="fa fa-edit text-primary"></i>
                                                    </a>
                                                    <a href="/delete-user/<%= user.id  %>" class="action-btn">
                                                        <i class="fa fa-trash  text-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>

                                            <% }) %>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <%- include('includes/footer') %>