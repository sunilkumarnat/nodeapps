<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-12 col-md-6">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title">Edit User</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Edit User Here ...</h6>
                        </div>
                        <div class="card-body p-3">
                            <div class="row g-3 align-items-center mb-3">
                                <div class="col-sm-12 col-ms-6 col-lg-3">
                                    <% if (errors !== '' && errors != null) { %>
                                        <% errors.forEach( (item) => { %>
                                            <div class="alert alert-danger">
                                                <%- item %>
                                            </div>
                                            <% }) %>
                                                <% } %>

                                </div>
                            </div>

                            <form action="/edit-user/<%= userData.id %>" method="POST">
                                <div class="row g-3 align-items-center mb-3">
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="name" class="col-form-label">Name</label>
                                            <input type="text" name="name" value="<%= userData.name %>" id="name" class="form-control" placeholder="Enter Name Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="contact_no" class="col-form-label">Contact No.</label>
                                            <input type="text" name="contact_no" value="<%= userData.contact_no %>" id="contact_no" class="form-control" placeholder="Enter Contact No. Here ...">
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6 col-lg-4">
                                        <div class="form-group">
                                            <label for="email" class="col-form-label">Email</label>
                                            <input type="email" readonly name="email" value="<%= userData.email %>" id="email" class="form-control" placeholder="Enter Email Here ...">
                                        </div>
                                    </div>
                                </div>
                        </div>
                        <div class="card-footer">
                            <div class="row g-3 align-items-center">
                                <div class="col-sm-12 col-md-12 col-lg-12 text-right">
                                    <input type="hidden" name="id" id="id" value="<%= userData.id %>">
                                    <input type="submit" id="submit" class="btn btn-outline-secondary " name="Form" value="Update">
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <%- include('includes/footer') %>